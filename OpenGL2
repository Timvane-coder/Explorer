    glVertex3f(-0.98, 0.0, 0.0)
    glVertex3f(-0.98, 0.0, 0.05)
    glVertex3f(-0.98, 0.25, 0.05)
    glEnd()

    #-------------black drawer---------

    glColor3f(0.0, 0.0, 0.0)
    glPushMatrix()                  # scale, translate  rotate matrix 
