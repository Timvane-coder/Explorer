def room1():
    #--------------floor-----------------
    glColor3f(0.7, 0.4, 0.3)
    glBegin(GL_POLYGON)
    glVertex3f(1, 0.0, -1)
    glVertex3f(1, 0.0, 1)
    glVertex3f(-1, 0.0, 1)
    glVertex3f(-1, 0.0, -1)
    glEnd()

    lines()

    #--------wall(back)grey1----------------
    glColor3f(0.69, 0.58, 0.56)  #front of door
    glBegin(GL_POLYGON)
    glVertex3f(1, 0.5, -1)
    glVertex3f(1, 0.0, -1)
    glVertex3f(-1, 0.0, -1)
    glVertex3f(-1, 0.5, -1)
