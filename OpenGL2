def display():
    glClear(GL_COLOR_BUFFER_BIT | GL_DEPTH_BUFFER_BIT)
    glLoadIdentity()
    # For demonstration, we call room1. In a complete program, you might switch between room1 and room2.
    room1()
    glutSwapBuffers()

def reshape(w, h):
    if h == 0:
        h = 1
    glViewport(0, 0, w, h)
    glMatrixMode(GL_PROJECTION)
    glLoadIdentity()
    gluPerspective(45, w/float(h), 0.1, 100.0)
    glMatrixMode(GL_MODELVIEW)
    glLoadIdentity()
    gluLookAt(viewer[0], viewer[1], viewer[2],
              lat[0], lat[1], lat[2],
              0, 1, 0)

def init():
    glClearColor(0.0, 0.0, 0.0, 1.0)
    glEnable(GL_DEPTH_TEST)

def main():
    glutInit(sys.argv)
    glutInitDisplayMode(GLUT_DOUBLE | GLUT_RGB | GLUT_DEPTH)
    glutInitWindowSize(800,600)
    glutInitWindowPosition(100,100)
    glutCreateWindow(b"OpenGL Room")
    init()
    glutDisplayFunc(display)
    glutReshapeFunc(reshape)
    glutTimerFunc(100, tfs, 0)
    glutTimerFunc(100, doort, 0)
    glutMainLoop()

if __name__ == "__main__":
    main()
    
