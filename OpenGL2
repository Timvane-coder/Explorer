turn = 0
def doort(v):
    global xx, zz, xx1
    # door timing 
    if xx < 0.2 and zz < 0.2:
        xx += 0.01
        zz += 0.01

    xx1 = 0

    glutPostRedisplay()
    glutTimerFunc(100, doort, 0)

xx = 0.0
zz = 0.0
xx1 = 1
lx = 0.0
lz = -1.0
angle = 0.0
viewer = [0.0, 0.2, 4.2]  # static GLdouble viewer[] = { 0.0, 0.2, 4.2 };
lat = [0.0, 0.2, 0.0]     # static GLdouble lat[] = { 0.0, 0.2, 0.0 };
oo = 0
cr = 0
cb = 0
cg = 0
font = GLUT_BITMAP_HELVETICA_18  # void* font = GLUT_BITMAP_HELVETICA_18;

def output(x, y, s):
    glRasterPos2f(x, y)
    for i in range(len(s)):
        glutBitmapCharacter(GLUT_BITMAP_TIMES_ROMAN_24, ord(s[i]))

def tfs(v):
    global cr, cb, cg
    cr += 0.01
    cb += 0.001
    cg += 0.0001
    if cr > 1.0:
        cr = 0

    if cb > 1.0:
        cb = 0

    if cg > 1.0:
        cg = 0

    glutPostRedisplay()
    glutTimerFunc(100, tfs, 0)

def lines():
    glColor3f(0.0, 0.0, 0.0)   #2x2 ka room   every tile spacing is 0.2
    glLineWidth(0.2)
